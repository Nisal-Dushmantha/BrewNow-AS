<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="@android:dimen/notification_large_icon_height"
    tools:context=".PaymentActivity">

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="415dp"
        android:layout_height="111dp"
        android:layout_marginTop="780dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/home"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/offers"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/offers"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/menu" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/cart"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="415dp"
        android:layout_height="651dp"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="95dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="430dp"
            android:layout_height="667dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/payment_method" />

        <Button
            android:id="@+id/pay"
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="535dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="58dp"
            android:backgroundTint="@color/accent_color"
            android:text="Pay"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="549dp"
            android:ems="10"
            android:hint="PGNL Dushmantha"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="467dp"
            android:ems="10"
            android:hint="xxxx xxxx xxxx xxxx"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="387dp"
            android:ems="10"
            android:hint="12/26"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="293dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="314dp"
            android:ems="10"
            android:hint="xxx"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="122dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="768dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingEnd="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="171dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="BrewNow"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>