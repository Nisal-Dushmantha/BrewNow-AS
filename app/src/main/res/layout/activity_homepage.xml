<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="@android:dimen/notification_large_icon_height"
    tools:context=".HomepageActivity">

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="415dp"
        android:layout_height="111dp"
        android:layout_marginTop="780dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/offers"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/offers" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/menu" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/cart" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="415dp"
        android:layout_height="651dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="110dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="184dp"
                android:layout_marginBottom="226dp"
                android:text="Featured Drinks"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.067"
                tools:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/offerbanner"
                android:layout_width="386dp"
                android:layout_height="195dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="311dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="145dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/special_offer" />

            <ImageView
                android:id="@+id/featured"
                android:layout_width="401dp"
                android:layout_height="237dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="74dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="340dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/featured" />

            <Button
                android:id="@+id/cappaccinobtn"
                android:layout_width="92dp"
                android:layout_height="39dp"
                android:layout_marginStart="58dp"
                android:layout_marginTop="261dp"
                android:layout_marginEnd="265dp"
                android:layout_marginBottom="351dp"
                android:backgroundTint="@color/secondary_color"
                android:text="Order"
                android:textColorLink="@color/secondary_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/amercanobtn"
                android:layout_width="92dp"
                android:layout_height="39dp"
                android:layout_marginStart="256dp"
                android:layout_marginTop="261dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="351dp"
                android:backgroundTint="@color/secondary_color"
                android:text="Order"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/offerbtn"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="435dp"
                android:layout_marginEnd="237dp"
                android:layout_marginBottom="168dp"
                android:backgroundTint="@color/primary_color"
                android:text="Order Now"
                android:textColor="@color/secondary_color"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="419dp"
                android:layout_height="243dp"
                android:layout_marginTop="506dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/cofeeoftheday" />

            <Button
                android:id="@+id/cappaccinobtn2"
                android:layout_width="92dp"
                android:layout_height="39dp"
                android:layout_marginStart="290dp"
                android:layout_marginTop="584dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="28dp"
                android:backgroundTint="@color/secondary_color"
                android:text="Order"
                android:textColorLink="@color/secondary_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="122dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="768dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingEnd="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="171dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="BrewNow"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>